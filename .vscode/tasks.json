{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Binary from X-BASIC",
            "type": "shell",
            "command": "m68k-xelf-bas -o ${workspaceFolder}/dist/mzmappy.x ${workspaceFolder}/src/mzmappy.bas",
        },
        {
            "label": "Make C-Source from X-BASIC",
            "type": "shell",
            "command": "m68k-xelf-bas -S -o ${workspaceFolder}/src/mzmappy.c ${workspaceFolder}/src/mzmappy.bas"
        },
        {
            "label": "Make Binary from C-Source(BASIC Convert)",
            "type": "shell",
            "command": "m68k-xelf-gcc -c -specs=xc.specs -o ${workspaceFolder}/dist/mzmappy.x ${workspaceFolder}/src/mzmappy.c -lbas"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm ${workspaceFolder}/dist/*"
        },
        {
            "label": "Setup",
            "type": "shell",
            "command": "cp ${workspaceFolder}/src/*.dat ${workspaceFolder}/dist"
        },
    ]
}